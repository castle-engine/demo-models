#VRML V2.0 utf8

Switch {
  whichChoice 2

  choice [
    KambiNavigationInfo { speed 5 type "WALK"
      headlightNode DirectionalLight {
        color 1 1 0
      } }
    KambiNavigationInfo { speed 5 type "WALK"
      headlightNode SpotLight {
        color 1 1 0
        beamWidth 0.05
      } }
    KambiNavigationInfo { speed 5 type "WALK"
      headlightNode SpotLight {
        color 1 1 1
        ambientIntensity 1
        cutOffAngle 0.3
        beamWidth 0.1
      } }
    KambiNavigationInfo { speed 5 type "WALK"
      headlightNode SpotLight {
        color 1 1 1
        ambientIntensity 1
        # No beamWidth. This is a sharp spot, spot circle should look
        # tha same with OpenGL rendering and ray-tracer.
        cutOffAngle 0.3
      } }
  ]
}

Inline { url "headlight_test_cube.wrl" }
