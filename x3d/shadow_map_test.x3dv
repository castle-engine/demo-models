# spot test ------------------------------------------------------------------

EditableTransform {
  children [
    DEF MySpot SpotLight {
      location 0 0 10
      direction 0 0 -1
      projectionNear 1
      projectionFar 20
    }
    Shape {
      appearance Appearance {
        material Material { }
        texture GeneratedShadowMap { light USE MySpot update "ALWAYS" size 512 }
      }
      geometry TesselatedPlane {
        texCoord TextureCoordinateGenerator {
          mode "PROJECTION"
          projectedLight USE MySpot
        }
      }
    }
  ]
}

EditableTransform {
  translation -20 0 0
  children [
    DEF MySpot2 SpotLight {
      location 0 0 10
      direction 0 0  -1
      projectionNear 1
      projectionFar 20
    }

    Shape {
      appearance Appearance {
        material Material { }
        texture GeneratedShadowMap { light USE MySpot2 update "ALWAYS" size 512 }
      }
      geometry ShadowMapReceiver {
        texCoord TextureCoordinateGenerator {
          mode "PROJECTION"
          projectedLight USE MySpot2
        }
      }
    }
  ]
}

