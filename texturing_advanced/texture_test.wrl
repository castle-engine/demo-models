#VRML V2.0 utf8

# A few texture tests by Kambi. Note how texture coordinates are
# automatically generated for IndexedFaceSet node.

Group {
  children [
    Shape {
      appearance DEF A Appearance {
        material Material { }
        texture DEF TestTex ImageTexture {
          url "../textures/test_texture.png"
        }
      }
      geometry Cone { }
    }

    Transform {
      translation 2 0 0
      children [
        Shape {
          appearance USE A
          geometry Cylinder { }
        }
        Transform {
          translation 2 0 0
          children [
            Shape {
              appearance USE A
              geometry Sphere { }
            }
            Transform {
              translation 2 0 0
              children [
                Shape {
                  appearance DEF B Appearance {
                    material Material { diffuseColor 1 0 0 }
                    texture USE TestTex
                    textureTransform TextureTransform { scale 2 2 }
                  }
                  geometry Box { }
                }
                Transform {
                  translation 2 -1 0
                  children Shape {
                    appearance DEF B Appearance {
                      material Material { diffuseColor 0 1 0 }
                      texture USE TestTex
                    }
                    geometry IndexedFaceSet {
                      solid FALSE
                      coord Coordinate {
                        point [0 0 0, 2 0 0, 3 2 0, 2 4 0, 0 4 0]
                        # point [2 2 0, 4 2 0, 5 4 0, 4 6 0, 2 6 0]
                      }
                      #texCoord TextureCoordinate {
                      #  point [.1 .2, .4 .5, 0 0, 1 0, 1.5 0.5, 1 1, 0 1] }
                      #texCoordIndex [2, 3, 4, 5, 6]
                      coordIndex [0, 1, 2, 3, 4]
                    }
                  }
                }
              ]
            }
          ]
        }
      ]
    }

    Transform {
      translation 12 0 0
      children Shape {
        appearance Appearance { material Material { } }
        geometry Sphere { }
      }
    }
  ]
}
