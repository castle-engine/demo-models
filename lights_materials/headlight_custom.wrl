#VRML V2.0 utf8

Switch {
  whichChoice 2

  choice [
    KambiNavigationInfo { speed 5 type "WALK"
      headlightNode DirectionalLight {
        color 1 1 0
      } }
    KambiNavigationInfo { speed 5 type "WALK"
      headlightNode SpotLight {
        color 1 1 0
        beamWidth 0.05
      } }
    KambiNavigationInfo { speed 5 type "WALK"
      headlightNode SpotLight {
        color 1 1 1
        ambientIntensity 1
        cutOffAngle 0.3
        beamWidth 0.1
      } }
    KambiNavigationInfo { speed 5 type "WALK"
      headlightNode SpotLight {
        color 1 1 1
        ambientIntensity 1
        # No beamWidth. This is a sharp spot, spot circle should look
        # tha same with OpenGL rendering and ray-tracer.
        cutOffAngle 0.3
      } }
  ]
}

EXTERNPROTO KambiTriangulation [
  exposedField SFLong    quadricSlices
  exposedField SFLong    quadricStacks
  exposedField SFLong    rectDivisions
] [ "urn:castle-engine.sourceforge.net:node:KambiTriangulation" ]

# triangulate more, to properly see spot lights on this
KambiTriangulation { rectDivisions 50 }

Shape {
  appearance Appearance { material Material {
    diffuseColor 1 1 1 ambientIntensity 1 }
  }
  # In fact, something like "solid TRUE outside FALSE" would be even better.
  geometry Box { size 10 10 10 solid FALSE }
}